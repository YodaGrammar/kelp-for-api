{% extends "base.html.twig" %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-10">
            <h1 >{{ 'packaging.list.title'|trans }}</h1>
        </div>
        <div class="col-2 text-right">
            <button type="button" class="btn btn-sm btn-secondary"><i class="fas fa-plus"></i></button>
        </div>
    </div>

    {#{{ dump(pager.packagings) }}#}
    <div>
        <table class="table table-striped table-bordered table-sm">
            <thead>
            <tr class="active">
                <th width="90%"> {{ 'packaging.list.table.header.label'|trans }} </th>
                <th width="10%" class="text-center"> Action </th>
            </tr>
            </thead>
            <tbody>
            {% for packaging in pager.packagings %}
                <tr>
                    <td>
                        {{ packaging.label }}
                    </td>
                    <td class="text-center">
                        <div class="btn-group btn-group-sm" role="group">
                            <a class="btn btn-secondary" href="{{ path('kelp.packaging.edit', {'id':packaging.id}) }}">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <button type="button" class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center"> {{ 'packaging.list.table.empty.message'|trans }} </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    {% set pagination = pager.pagination %}
    {% include 'pagination.html.twig' %}

{% endblock %}